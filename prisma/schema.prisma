generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Assets {
  FileName    String?     @unique @db.VarChar(36)
  Description String?     @db.VarChar(256)
  ID          Int         @id @default(autoincrement())
  Display     Boolean     @default(false)
  Type        Assets_Type
  ProjectID   Int
  Thumbnail   Boolean     @default(false)
  Alt         String      @db.VarChar(128)
  Created     DateTime    @default(now()) @db.Timestamp(0)
  Project     Project     @relation(fields: [ProjectID], references: [ID])

  @@index([ProjectID], name: "Assets_FK")
}

model Categories {
  Name       String @unique @db.VarChar(16)
  CategoryID Int    @id @default(autoincrement())
  Tags       Tags[]
}

model Project {
  ID          Int            @id @default(autoincrement())
  Created     DateTime       @default(now()) @db.Timestamp(0)
  Updated     DateTime       @default(now()) @db.Timestamp(0)
  Name        String         @db.VarChar(32)
  Description String?        @db.VarChar(1024)
  Status      Project_Status @default(Unknown)
  Assets      Assets[]
  TagLink     TagLink[]
}

model TagLink {
  ProjectID Int
  TagID     Int
  TagLinkID Int     @id @default(autoincrement())
  Project   Project @relation(fields: [ProjectID], references: [ID])
  Tags      Tags    @relation(fields: [TagID], references: [TagID])

  @@index([ProjectID], name: "TagLink_FK")
  @@index([TagID], name: "TagLink_FK_1")
}

model Tags {
  Name       String      @db.VarChar(16)
  TagID      Int         @id @default(autoincrement())
  CategoryID Int?
  Categories Categories? @relation(fields: [CategoryID], references: [CategoryID])
  TagLink    TagLink[]

  @@index([CategoryID], name: "Tags_FK")
}

enum Assets_Type {
  Image
  Audio
  Video
  Programming
}

enum Project_Status {
  Finished
  In_Progress @map("In Progress")
  Abandoned
  Unknown
}
