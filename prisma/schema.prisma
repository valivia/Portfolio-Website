generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Content {
  Name        String         @db.VarChar(32)
  PostID      Int            @id @default(autoincrement())
  CategoryID  Int?
  Created     DateTime       @default(now()) @db.Timestamp(0)
  FileName    String         @unique @db.VarChar(36)
  Description String?        @db.VarChar(256)
  Status      Content_Status @default(Unknown)
  LastUpdated DateTime       @default(now()) @db.Timestamp(0)
  TagID       Int?
  Categories  Categories?    @relation(fields: [CategoryID], references: [CategoryID])
  Tags        Tags?          @relation(fields: [TagID], references: [TagID])
  SubContent  SubContent[]

  @@index([CategoryID], name: "Content_FK")
  @@index([TagID], name: "Content_FK_1")
}

model SubContent {
  PostID      Int
  FileName    String  @unique @db.VarChar(32)
  Description String? @db.VarChar(256)
  SubID       Int     @id @default(autoincrement())
  Content     Content @relation(fields: [PostID], references: [PostID])

  @@index([PostID], name: "SubContent_FK")
}

model Categories {
  CategoryName String    @unique @db.VarChar(16)
  CategoryID   Int       @id @default(autoincrement())
  Content      Content[]
  Tags         Tags[]
}

model Tags {
  TagName    String      @unique @db.VarChar(16)
  TagID      Int         @id @default(autoincrement())
  CategoryID Int?
  Categories Categories? @relation(fields: [CategoryID], references: [CategoryID])
  Content    Content[]

  @@index([CategoryID], name: "Tags_FK")
}

enum Content_Status {
  Unknown
  Finished
  In_Progress @map("In Progress")
  Abandoned
}
